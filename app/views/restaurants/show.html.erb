<div class="card-body bg-white border">
  <h4><%= @restaurant.name %></h4>
  <p><%= @restaurant.category.capitalize %></p>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <%= link_to 'Back to list', restaurants_path, class: 'text-decoration-none' %>
</div>

<div class="card-body bg-white border mt-5">


  <h4>New review</h4>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: (0..5).to_a %>
    <%= f.submit class: 'mb-4' %>
  <% end %>
  <p></p>
  <% @restaurant.reviews.reverse.each do |review| %>
    <div class="card p-3">
      <p><%= review.rating %></p>
      <p><%= review.content %></p>
    </div>
  <% end %>
</div>




